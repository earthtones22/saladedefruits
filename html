    <script>
        // --- Popup Modal Logic ---
        const popupBackdrop = document.getElementById('welcome-popup-backdrop');
        const popupContent = document.getElementById('welcome-popup');

        function showPopup() {
            if (popupBackdrop) {
                popupBackdrop.style.display = 'flex';
                setTimeout(() => { // Start transition
                    popupBackdrop.classList.add('visible');
                }, 10); // Minimal delay
            }
        }

        function closePopup() {
             if (popupBackdrop) {
                 popupBackdrop.classList.remove('visible');
                 // Wait for animation to finish before hiding completely
                 popupBackdrop.addEventListener('transitionend', function handleTransitionEnd(e) {
                     if (e.propertyName === 'opacity' && !popupBackdrop.classList.contains('visible')) {
                         popupBackdrop.style.display = 'none';
                         popupBackdrop.removeEventListener('transitionend', handleTransitionEnd); // Clean up listener
                     }
                 });
             }
        }

         if (popupBackdrop) {
             popupBackdrop.addEventListener('click', function(event) {
                 if (event.target === popupBackdrop) {
                     closePopup();
                 }
             });
         }

        // --- Section Navigation (Show/Hide) ---
        function showSection(sectionIdToShow) {
            const sections = document.querySelectorAll('.hero-section, .homepage-section, .content-section');
            let targetElement = null;

            sections.forEach(section => {
                section.style.display = 'none';

                if (sectionIdToShow === 'home') {
                    if (section.classList.contains('hero-section') || section.classList.contains('homepage-section')) {
                        section.style.display = 'block';
                         if (!targetElement) targetElement = section;
                    }
                } else if (section.id === sectionIdToShow) {
                    section.style.display = 'block';
                    targetElement = section;
                }
            });

            const contactSection = document.getElementById('contact-section');
            if (contactSection) contactSection.style.display = 'block';

            if (targetElement) {
                 const headerOffset = document.querySelector('.site-header')?.offsetHeight || 0;
                 const offset = (sectionIdToShow === 'home' || targetElement.id === 'hero') ? 0 : headerOffset + 20;
                 const elementPosition = targetElement.getBoundingClientRect().top;
                 const offsetPosition = elementPosition + window.pageYOffset - offset;
                 window.scrollTo({ top: Math.max(0, offsetPosition), behavior: 'smooth' });
            }

            if (sectionIdToShow === 'menu-section') {
                 initializeMenuTabs();
            }
            handleScrollAnimation();
        }

        // --- Scroll Animation ---
        const scrollElements = document.querySelectorAll(".scroll-animate");
        const elementInView = (el, dividend = 1) => {
          if (el.closest('.popup-backdrop') && window.getComputedStyle(el.closest('.popup-backdrop')).display === 'none') return false;
          const elementTop = el.getBoundingClientRect().top;
          const elementBottom = el.getBoundingClientRect().bottom;
           return ( elementTop <= (window.innerHeight || document.documentElement.clientHeight) / dividend && elementBottom >= 0 );
        };
        const displayScrollElement = (element) => { element.classList.add("visible"); };
        const handleScrollAnimation = () => {
             document.querySelectorAll(".scroll-animate").forEach((el) => {
                 const parentSection = el.closest('section, .popup-content');
                 let isDisplayed = window.getComputedStyle(el).display !== 'none';
                 if (parentSection && window.getComputedStyle(parentSection).display === 'none') { isDisplayed = false; }
                 if (isDisplayed && elementInView(el, 1.15)) { displayScrollElement(el); }
             });
         };
        window.addEventListener("scroll", handleScrollAnimation);

        // --- Menu Tabs ---
        function openMenuTab(evt, tabName) {
          let i, tabcontent, tablinks;
          tabcontent = document.querySelectorAll("#menu-section .menu-tab-content");
          for (i = 0; i < tabcontent.length; i++) { tabcontent[i].style.display = "none"; }
          tablinks = document.querySelectorAll("#menu-section .tab-link");
          for (i = 0; i < tablinks.length; i++) { tablinks[i].className = tablinks[i].className.replace(" active", ""); }
          const currentTabContent = document.getElementById(tabName);
          if(currentTabContent) { currentTabContent.style.display = "block"; }
          if (evt && evt.currentTarget) { evt.currentTarget.className += " active"; }
        }
        function initializeMenuTabs() {
             const menuTabs = document.querySelector('#menu-section .menu-tabs');
             if (!menuTabs) return;
             let activeTab = menuTabs.querySelector('.tab-link.active');
             if (!activeTab) {
                 const foodTabButton = menuTabs.querySelector('button[onclick*="\'food\'"]');
                 if (foodTabButton) {
                      foodTabButton.classList.add('active');
                      activeTab = foodTabButton; // Update activeTab reference
                 }
             }
              if (activeTab) {
                    const onclickAttr = activeTab.getAttribute('onclick');
                    const tabNameMatch = onclickAttr ? onclickAttr.match(/'([^']+)'/): null;
                    if (tabNameMatch && tabNameMatch[1]) {
                        openMenuTab(null, tabNameMatch[1]);
                    }
              }
        }

        // --- Footer Year ---
        const yearSpan = document.getElementById('year');
        if (yearSpan) { yearSpan.textContent = new Date().getFullYear(); }

        // --- Smooth Scrolling for #contact-section link ---
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const targetId = this.getAttribute('href');
                if (targetId === '#contact-section') {
                    e.preventDefault();
                    const targetElement = document.querySelector(targetId);
                    if(targetElement) {
                        const headerOffset = document.querySelector('.site-header')?.offsetHeight || 0;
                        const elementPosition = targetElement.getBoundingClientRect().top;
                        const offsetPosition = elementPosition + window.pageYOffset - headerOffset - 20;
                        targetElement.style.display = 'block';
                        window.scrollTo({ top: offsetPosition, behavior: "smooth" });
                    }
                }
            });
        });

         // Initialize the page view and popup on load
         document.addEventListener('DOMContentLoaded', () => {
             showSection('home');
             showPopup(); // Show popup when DOM is ready
         });

    </script>

</body>
</html>
